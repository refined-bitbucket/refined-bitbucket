{
  "manifest_version": 2,
  "name": "Refined Bitbucket",
  "description": "Improves Bitbucket's user interface",
  "version": "3.3.0",
  "author": "andremw",
  "homepage_url": "https://github.com/refined-bitbucket/refined-bitbucket",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "applications": {
    "gecko": {
      "id": "refined-bitbucket@refined-bitbucket.org"
    }
  },
  "permissions": [
    "activeTab",
    "https://bitbucket.org/*",
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "prism.js",
        "main.js"
      ],
      "matches": [
        "https://bitbucket.org/*"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
