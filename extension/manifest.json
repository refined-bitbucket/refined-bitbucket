{
  "manifest_version": 2,
  "name": "Refined Bitbucket",
  "description": "Improves Bitbucket's user interface",
  "version": "2.6.1",
  "author": "andremw",
  "homepage_url": "https://github.com/refined-bitbucket/refined-bitbucket",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "applications": {
    "gecko": {
      "id": "refined-bitbucket@andremw.org"
    }
  },
  "permissions": [
    "activeTab",
    "https://bitbucket.org/*",
    "storage",
    "tabs"
  ],
  "optional_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "js": [
        "prism.js",
        "vendor/jquery-3.1.0.min.js",
        "vendor/jquery.highlight.js",
        "vendor/mousetrap.min.js",
        "extension.js"
      ],
      "css": [],
      "matches": [
        "https://bitbucket.org/*"
      ]
    }
  ],
  "background": {
    "scripts": [
        "vendor/webext-dynamic-content-scripts.js",
        "background.js"
    ],
    "persistent": false
  }
}
