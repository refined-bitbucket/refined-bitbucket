{
  "name": "refined-bitbucket",
  "description": "Chrome extension that improves BitBucket's user interface",
  "version": "3.0.0",
  "main": "index.js",
  "scripts": {
    "xo": "xo --fix src/*.js src/**/*.js",
    "ava": "cross-env BABEL_ENV=testing ava",
    "build": "npm run test && webpack",
    "build:min": "npm run test && cross-env NODE_ENV=production webpack",
    "test": "npm run xo && npm run ava",
    "watch": "webpack --watch",
    "package": "node scripts/package",
    "deploy": "npm run build:min && npm run package && node scripts/deploy",
    "major": "npm version --no-git-tag-version major",
    "minor": "npm version --no-git-tag-version minor",
    "patch": "npm version --no-git-tag-version patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/refined-bitbucket/refined-bitbucket.git"
  },
  "keywords": [
    "bitbucket",
    "highlight",
    "syntax-highlight",
    "prism"
  ],
  "author": "andremw",
  "contributors": [
    {
      "name": "Ronald Rey",
      "email": "reyronald@gmail.com",
      "url": "http://github.com/reyronald"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/refined-bitbucket/refined-bitbucket/issues",
    "email": "reyronald@gmail.com"
  },
  "homepage": "https://github.com/refined-bitbucket/refined-bitbucket#readme",
  "devDependencies": {
    "adm-zip": "^0.4.7",
    "ava": "^0.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "chrome-extension-deploy": "^3.0.0",
    "cross-env": "^5.1.0",
    "dotenv": "^4.0.0",
    "jsdom": "^11.3.0",
    "mutationobserver-shim": "^0.3.2",
    "path": "^0.12.7",
    "request": "^2.83.0",
    "semver": "^5.4.1",
    "uglifyjs-webpack-plugin": "^1.0.0",
    "webpack": "^3.8.1",
    "xo": "^0.16.0",
    "yoctodelay": "^1.1.0"
  },
  "dependencies": {
    "dom-chef": "^3.0.0",
    "jquery": "^3.2.1",
    "jquery-highlight": "^3.4.0",
    "element-ready": "^2.2.0",
    "ignore": "^3.3.6",
    "selector-observer": "^1.1.0"
  },
  "xo": {
    "semicolon": true,
    "esnext": true,
    "space": 4,
    "globals": [
      "document",
      "MutationObserver"
    ],
    "rules": {
      "no-unused-vars": [
        2,
        {
          "varsIgnorePattern": "^h$"
        }
      ]
    }
  },
  "ava": {
    "files": [
      "test/*.spec.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit",
    "timeout": "5s"
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "h",
          "useBuiltIns": true
        }
      ],
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ],
    "env": {
      "testing": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  }
}
